package UIPodsistem;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.core.JsonGenerationException;
import com.fasterxml.jackson.databind.JsonMappingException;
import com.fasterxml.jackson.databind.ObjectMapper;

import Model.Aplikacija;
import Model.Igrac;

public class IgraciUI {
	public class PomocnaIgraci{
		private ArrayList<Igrac> igraci;
		
		public PomocnaIgraci(){
			igraci = Aplikacija.listaIgraca;
		}

		public ArrayList<Igrac> getIgraci() {
			return igraci;
		}

		@JsonProperty("igraci")
		public void setIgraci(ArrayList<Igrac> igraci) {
			this.igraci = igraci;
		}
		
		
	}
	private PomocnaIgraci igr;
	
	public IgraciUI(){
		igr = new PomocnaIgraci();
	}

	public void upisiIgraca() throws JsonGenerationException, JsonMappingException, IOException{
		ObjectMapper mapper = new ObjectMapper();
		mapper.writeValue(new File("Igraci.json"), this.igr);
	}
	
	public void iscitajIgrace(){
		ObjectMapper mapper = new ObjectMapper();
		mapper.readValues(new File("Igraci.json"), this.igr);
		
	}
}

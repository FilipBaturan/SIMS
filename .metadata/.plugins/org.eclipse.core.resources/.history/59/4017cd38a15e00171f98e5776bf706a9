package GUI;

import java.awt.BorderLayout;
import java.awt.GridLayout;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class GlavniProzor extends JFrame{

	public GlavniProzor() {
		
		this.setTitle("Glavni prozor");
		this.setVisible(true);
		this.setLocation(250, 100);
		this.setSize(400, 300);
		PanelSlika glavniPanel = new PanelSlika();
		this.setResizable(false);
		JPanel gornjiPanel = new JPanel();
		JPanel donjiPanel = new JPanel();
		this.setImage(glavniPanel);
		this.setButtons(glavniPanel);
		this.setContentPane( glavniPanel );
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}

	private void setButtons(PanelSlika glavniPanel) {
		
		JButton dugme1 = new JButton("Dodavanje utakmice");
		//dugme1.setSize(new Dimension(300, 150));
		//dugme1.setLocation(new Point(300, 250));
		JButton dugme2 = new JButton("Izvestaji");
		//dugme1.setVisible(true);
		glavniPanel.setLayout(new GridLayout(1,2));
		glavniPanel.add(dugme1, BorderLayout.EAST);
		glavniPanel.add(dugme2, BorderLayout.WEST);
	}

	private void setImage(PanelSlika glavniPanel) {
		try {
			//BufferedImage slika =;
			Image slika = ImageIO.read(new File("./slike/Kosarka.jpg"));
			glavniPanel.postaviPozadinu(slika);
			
		} catch (IOException e) {
			System.out.println("Greska");
		}
		
	}
}


	public Klub domacin;
	public Klub gost;
	public ArrayList<Igrac> aktivni;

	public Utakmica() {
		pokrenut = false;
		aktivni = new ArrayList<Igrac>();
		//timer = new Timer();
	}
	
	public Utakmica(int id,Klub domacin, Klub gost)
	{
		this.id = id;
		this.domacin = domacin;
		this.gost = gost;
		vreme = 0;
		pokrenut = false;
		aktivni = new ArrayList<Igrac>();
		//timer = new Timer();
	}
	
	public Utakmica(int id,Klub domacin,Klub gost,Sala sala){

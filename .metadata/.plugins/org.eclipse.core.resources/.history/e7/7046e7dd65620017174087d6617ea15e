	public void postaviStartere(ArrayList<Igrac> igraci) {
		aktivni = igraci;
	}

	public void zaustaviVreme() {
		trenutnoStanje.prekid();
	}

	public void pokreniVreme() {
		trenutnoStanje.nastavak();
	}


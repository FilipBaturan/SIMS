	}
	
	public void azuriranje(Klub klub,int tip,int vrednost){
		for(StatistikaKluba statistika:klub.statistikaKluba){
			if(statistika.utakmica == this){
				statistika.azuriranje(tip, vrednost);
				break;
			}
		}
	}
}



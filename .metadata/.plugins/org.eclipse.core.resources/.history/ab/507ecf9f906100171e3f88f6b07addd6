package UIPodsistem;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.core.JsonGenerationException;
import com.fasterxml.jackson.databind.JsonMappingException;
import com.fasterxml.jackson.databind.ObjectMapper;

import Model.Klub;

public class KluboviUI {
	private static class Klubovi{
		private ArrayList<Klub> klubovi;

		public Klubovi() {
			
		}

		public ArrayList<Klub> getKlubovi() {
			return klubovi;
		}

		@JsonProperty("klubovi")
		public void setKlubovi(ArrayList<Klub> klubovi) {
			this.klubovi = klubovi;
		}
		
		private Klubovi k;
		
		
	}
	
	public KluboviUI() {}
	
	public void upisiKlub(Klub k) throws JsonGenerationException, JsonMappingException, IOException{
		ObjectMapper mapper = new ObjectMapper();
		mapper.writeValue(new File("Klubovi.json"), k);
		
	}
}
